<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_reg">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="194dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="25dp"
        android:text="Create new account"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextName"
        android:layout_height="37dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/vie_bg"
        android:ems="10"
        android:hint="First name"
        android:paddingLeft="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/TextCognome"
        android:layout_height="37dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingLeft="20dp"
        android:background="@drawable/vie_bg"
        android:ems="10"
        android:hint="Surname"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextName"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/vie_bg"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextCognome"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/birthSelector"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/vie_bg"
        android:hint="Date"
        android:paddingLeft="20dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:lineSpacingExtra="8sp"
        android:text="Date of birth"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/birthSelector"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <EditText
        android:id="@+id/TextTelephone"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/vie_bg"
        android:ems="10"
        android:hint="Telephone (Facoltaty)"
        android:paddingLeft="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthSelector"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/TextCitta"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/vie_bg"
        android:ems="10"
        android:hint="City (Facoltaty)"
        android:paddingLeft="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextTelephone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/black_bord"
        android:gravity="center_horizontal"
        android:text="The password must be containa at least 8 character (A-Z, a-z, 0-9 and at least special char)"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextCitta" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/vie_bg"
        android:ems="10"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/ConfPass"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/vie_bg"
        android:ems="10"
        android:hint="Confirm password"
        android:paddingLeft="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/gdprAccept"
        android:layout_width="30dp"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfPass" />

    <TextView
        android:id="@+id/termini"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="Accept all terms and services"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/gdprAccept"
        app:layout_constraintTop_toBottomOf="@+id/ConfPass" />

    <Button
        android:id="@+id/Confirm"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/vie_bg"
        android:backgroundTint="@color/green"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termini" />" />
</androidx.constraintlayout.widget.ConstraintLayout>